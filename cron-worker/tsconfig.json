{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["../src/*"],
      "@/modules/*": ["../src/modules/*"],
      "@/lib/*": ["../src/lib/*"]
    }
  },
  "include": [
    "src/**/*",
    "../src/modules/trends/**/*",
    "../src/lib/kv-json.ts"
  ],
  "exclude": ["node_modules"]
}
