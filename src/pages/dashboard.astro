---
import { getLatestTrendsReport } from '@/modules/trends/store';
import AppLayout from '@/layouts/AppLayout.astro';
import { requireKV } from '@/lib/env';

// Server-side data fetching
const kv = requireKV(Astro.locals);
let latestReport = null;
let fetchError = null;

try {
  latestReport = await getLatestTrendsReport(kv);
} catch (e: any) {
  fetchError = e?.message || 'Unknown error';
  console.error('[dashboard] Failed to fetch report:', fetchError);
}

// Stats
const stats = {
  totalScanned: latestReport?.meta?.items_scanned || 0,
  totalKept: latestReport?.meta?.items_kept || 0,
  executionTime: latestReport?.meta?.execution_time_ms || 0,
  lastScanTime: latestReport?.meta?.generated_at || '',
  sourceStatus: latestReport?.meta?.source_status || null,
  llmUsed: latestReport?.meta?.llm_used || 'mock',
};

const allCards = latestReport?.trends_by_theme?.flatMap(theme => theme.cards) || [];
const highSignalCount = allCards.filter(c => c?.signals?.score > 700).length;
const themeCount = latestReport?.trends_by_theme?.length || 0;

// Format time
const formatTime = (iso: string) => {
  try {
    const d = new Date(iso);
    return d.toLocaleString('en-US', {
      month: 'short',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      hour12: false
    });
  } catch {
    return 'N/A';
  }
};

// Helper for trend icon
const getTrendIcon = (score: number, prevScore: number = 0) => {
  const change = score - prevScore;
  if (change > 5) return '<span class="text-green-400">‚Üë</span>';
  if (change < -5) return '<span class="text-red-400">‚Üì</span>';
  return '<span class="text-gray-500">‚Üí</span>';
};

// Source icons
const sourceIcons: Record<string, string> = {
  google_trends_rss: 'üîç',
  weibo_hot: 'üî•',
  mock: 'üß™',
};
---

<AppLayout title="Mission Control | Trend Radar v2.1">
  <main class="min-h-screen bg-gray-950 text-gray-200 p-3 md:p-4 font-mono text-xs">
    <!-- Version Badge -->
    <div class="fixed top-2 right-2 z-50 bg-blue-500 text-white text-[10px] px-2 py-1 rounded font-mono font-bold">
      v2.1.0-SSR
    </div>

    <!-- Header -->
    <header class="mb-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-blue-500/20 border border-blue-500/30 rounded flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <h1 class="text-base font-bold text-gray-100 tracking-tight">MISSION CONTROL</h1>
            <p class="text-[10px] text-gray-500">TREND RADAR DASHBOARD</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-1.5 text-[10px] font-mono">
            <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-gray-500">LAST SCAN:</span>
            <span class="text-gray-300">{formatTime(stats.lastScanTime)}</span>
          </div>
          <div class="h-4 w-px bg-gray-800" />
          <span class="text-[10px] px-2 py-1 bg-green-500/20 text-green-400 rounded border border-green-500/30 font-mono">
            SYSTEM ONLINE
          </span>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-2 mb-3">
        <!-- SCANNED -->
        <div class="border border-green-500/30 bg-green-500/5 rounded-lg p-3">
          <div class="flex items-center justify-between mb-2">
            <span class="text-[10px] font-mono text-gray-500 uppercase tracking-wider">SCANNED</span>
            <svg class="w-3.5 h-3.5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
          </div>
          <span class="text-2xl font-mono font-bold text-green-400">{stats.totalScanned}</span>
        </div>

        <!-- HIGH SIGNAL -->
        <div class={`border rounded-lg p-3 ${highSignalCount > 5 ? 'border-green-500/30 bg-green-500/5' : 'border-yellow-500/30 bg-yellow-500/5'}`}>
          <div class="flex items-center justify-between mb-2">
            <span class="text-[10px] font-mono text-gray-500 uppercase tracking-wider">HIGH SIGNAL</span>
            <svg class={`w-3.5 h-3.5 ${highSignalCount > 5 ? 'text-green-400' : 'text-yellow-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <span class={`text-2xl font-mono font-bold ${highSignalCount > 5 ? 'text-green-400' : 'text-yellow-400'}`}>{highSignalCount}</span>
        </div>

        <!-- THEMES -->
        <div class="border border-blue-500/30 bg-blue-500/5 rounded-lg p-3">
          <div class="flex items-center justify-between mb-2">
            <span class="text-[10px] font-mono text-gray-500 uppercase tracking-wider">THEMES</span>
            <svg class="w-3.5 h-3.5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <span class="text-2xl font-mono font-bold text-blue-400">{themeCount}</span>
        </div>

        <!-- EXEC TIME -->
        <div class={`border rounded-lg p-3 ${stats.executionTime < 5000 ? 'border-green-500/30 bg-green-500/5' : 'border-yellow-500/30 bg-yellow-500/5'}`}>
          <div class="flex items-center justify-between mb-2">
            <span class="text-[10px] font-mono text-gray-500 uppercase tracking-wider">EXEC TIME</span>
            <svg class={`w-3.5 h-3.5 ${stats.executionTime < 5000 ? 'text-green-400' : 'text-yellow-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
            </svg>
          </div>
          <span class={`text-2xl font-mono font-bold ${stats.executionTime < 5000 ? 'text-green-400' : 'text-yellow-400'}`}>{stats.executionTime}<span class="text-sm text-gray-500">ms</span></span>
        </div>
      </div>

      <!-- Source Status -->
      {stats.sourceStatus && (
        <div class="flex items-center gap-2 flex-wrap mb-4">
          <span class="text-[10px] text-gray-500 font-mono">SOURCES:</span>
          {Object.entries(stats.sourceStatus).map(([source, status]) => (
            <span class={`text-[10px] px-2 py-0.5 rounded font-mono border ${
              status.ok
                ? 'bg-green-500/10 text-green-400 border-green-500/20'
                : 'bg-red-500/10 text-red-400 border-red-500/20'
            }`}>
              {source}: {status.ok ? `${status.items} items` : 'FAILED'}
            </span>
          ))}
          <span class="text-[10px] px-2 py-0.5 bg-purple-500/10 text-purple-400 rounded border border-purple-500/20 font-mono">
            LLM: {stats.llmUsed.toUpperCase()}
          </span>
        </div>
      )}
    </header>

    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-3">
      <!-- Left Column (2/3) -->
      <div class="lg:col-span-2 space-y-3">

        <!-- TAG_VELOCITY Chart -->
        <div class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden">
          <div class="flex items-center justify-between px-4 py-2 border-b border-gray-800">
            <div class="flex items-center gap-2">
              <span class="text-xs font-mono text-gray-400">üìä TAG_VELOCITY</span>
              <span class="text-[10px] px-1.5 py-0.5 bg-blue-500/20 text-blue-400 rounded font-mono">24H</span>
            </div>
            <span class="text-[10px] text-gray-500 font-mono">TOP 12 TAGS</span>
          </div>

          <!-- Simple SVG Line Chart -->
          <div class="p-4">
            <div class="h-32 flex items-end gap-1 mb-3">
              {allCards.slice(0, 12).map((card, i) => {
                const maxScore = Math.max(...allCards.map(c => c.signals.score));
                const height = Math.max(4, (card.signals.score / maxScore) * 100);
                const hue = (i * 30) % 360;
                return (
                  <div class="flex-1 flex flex-col items-center gap-1">
                    <div
                      class="w-full rounded-t transition-all hover:opacity-80"
                      style={`height: ${height}%; background: linear-gradient(to top, hsl(${hue}, 70%, 40%), hsl(${hue}, 70%, 60%))`}
                      title={`${card.title.slice(0, 20)}: ${card.signals.score}`}
                    />
                  </div>
                );
              })}
            </div>
          </div>

          <!-- Velocity Table -->
          <div class="border-t border-gray-800">
            <table class="w-full text-xs">
              <thead>
                <tr class="border-b border-gray-800">
                  <th class="px-3 py-2 text-left font-mono text-gray-500 font-normal">TAG</th>
                  <th class="px-3 py-2 text-right font-mono text-gray-500 font-normal">SCORE</th>
                  <th class="px-3 py-2 text-right font-mono text-gray-500 font-normal">TREND</th>
                </tr>
              </thead>
              <tbody class="font-mono">
                {allCards.slice(0, 12).map((card) => (
                  <tr class="border-b border-gray-800/50 hover:bg-gray-800/30">
                    <td class="px-3 py-2">
                      <span class="text-gray-300 truncate block max-w-[200px]" title={card.title}>{card.title}</span>
                    </td>
                    <td class="px-3 py-2 text-right text-gray-400">{card.signals.score}</td>
                    <td class="px-3 py-2 text-right" set:html={getTrendIcon(card.signals.score, card.signals.score * 0.9)} />
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        <!-- TREND_CLUSTERS -->
        <div class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden">
          <div class="flex items-center justify-between px-4 py-2 border-b border-gray-800">
            <span class="text-xs font-mono text-gray-400">üìà TREND_CLUSTERS</span>
            <span class="text-[10px] text-gray-500 font-mono">BY THEME</span>
          </div>
          <div class="p-3 grid grid-cols-1 md:grid-cols-2 gap-2">
            {latestReport?.trends_by_theme?.slice(0, 6).map((theme) => (
              <div class="bg-gray-950/50 border border-gray-800 rounded p-2">
                <div class="flex items-center justify-between mb-1">
                  <span class="text-[10px] font-mono text-gray-400 uppercase">{theme.theme}</span>
                  <span class="text-[10px] text-gray-500">{theme.cards.length} items</span>
                </div>
                <div class="flex flex-wrap gap-1 mb-1.5">
                  {theme.keywords?.slice(0, 5).map((kw) => (
                    <span class="text-[9px] px-1.5 py-0.5 bg-blue-500/10 text-blue-400 rounded font-mono">
                      {kw}
                    </span>
                  ))}
                </div>
                <div class="space-y-0.5">
                  {theme.cards.slice(0, 2).map((card) => (
                    <a
                      href={card.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block text-[10px] text-gray-400 hover:text-gray-200 truncate"
                      title={card.title}
                    >
                      {card.title}
                    </a>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- AI_INSIGHT -->
        {latestReport?.insight_markdown && (
          <div class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden">
            <div class="flex items-center justify-between px-4 py-2 border-b border-gray-800">
              <span class="text-xs font-mono text-gray-400">ü§ñ AI_INSIGHT</span>
              <span class="text-[10px] text-gray-500 font-mono">DAILY SUMMARY</span>
            </div>
            <div class="p-4 max-h-64 overflow-y-auto custom-scrollbar">
              <div class="text-[10px] text-gray-400 font-mono whitespace-pre-wrap leading-relaxed">
                {latestReport.insight_markdown}
              </div>
            </div>
          </div>
        )}
      </div>

      <!-- Right Column (1/3) - SIGNAL_FEED -->
      <div class="lg:col-span-1">
        <div class="bg-gray-900/50 border border-gray-800 rounded-lg overflow-hidden">
          <div class="flex items-center justify-between px-4 py-2 border-b border-gray-800">
            <span class="text-xs font-mono text-gray-400">üì° SIGNAL_FEED</span>
            <span class="text-[10px] text-gray-500 font-mono">LIVE</span>
          </div>

          <div class="divide-y divide-gray-800/50 max-h-[600px] overflow-y-auto custom-scrollbar">
            {allCards.slice(0, 30).map((card, idx) => (
              <div class="px-3 py-2 hover:bg-gray-800/30 transition-colors">
                <div class="flex items-start gap-2">
                  <span class="text-xs mt-0.5 flex-shrink-0">{sourceIcons[card.source] || 'üì°'}</span>

                  <div class="flex-1 min-w-0">
                    <a
                      href={card.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-xs text-gray-200 hover:text-blue-400 block truncate font-medium"
                      title={card.title}
                    >
                      {card.title}
                    </a>

                    <div class="flex items-center gap-2 text-[10px] font-mono mt-1">
                      <span class="px-1 py-0.5 bg-green-500/10 text-green-400 border border-green-500/20 rounded">REAL</span>
                      <span class="text-gray-400">{card.signals.score}</span>
                      <span class="text-gray-600">{card.language.toUpperCase()}</span>
                      <span class="text-gray-600">{card.source}</span>
                    </div>

                    {card.themes && card.themes.length > 0 && (
                      <div class="flex gap-1 mt-1 flex-wrap">
                        {card.themes.slice(0, 3).map((t) => (
                          <span class="text-[9px] px-1 py-0.5 bg-gray-800 text-gray-400 rounded font-mono">
                            {t.slice(0, 3).toUpperCase()}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>

                  <span class={`text-[10px] font-mono w-5 h-5 flex items-center justify-center rounded flex-shrink-0 ${
                    idx < 3 ? 'bg-blue-500/20 text-blue-400' : 'bg-gray-800 text-gray-500'
                  }`}>
                    {idx + 1}
                  </span>
                </div>
              </div>
            ))}
          </div>

          <div class="px-4 py-2 border-t border-gray-800 bg-gray-900/30">
            <div class="flex items-center justify-between text-[10px] font-mono text-gray-500">
              <span>{allCards.length} SIGNALS PROCESSED</span>
              <div class="flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span>LIVE FEED</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-4 pt-3 border-t border-gray-800">
      <div class="flex items-center justify-between text-[10px] font-mono text-gray-600">
        <span>POWERED BY CLOUDFLARE WORKERS</span>
        <span>V2.0.0 | AUDIT_REPAIRED</span>
      </div>
    </footer>
  </main>

  <style is:global>
    .custom-scrollbar::-webkit-scrollbar { width: 4px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: #111827; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #374151; border-radius: 2px; }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #4b5563; }
    .line-clamp-1 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
    }
  </style>
</AppLayout>
