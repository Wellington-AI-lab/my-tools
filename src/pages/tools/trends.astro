    }

    // æš´éœ²åˆ°å…¨å±€
    (window as any).showTagDetail = showTagDetail;

    // ========== äººå·¥åˆ·æ–° ==========

    async function manualRefresh() {
      if (!scanBtnEl) return;

      scanBtnEl.disabled = true;
      scanBtnEl.textContent = 'åˆ·æ–°ä¸­...';

      try {
        const resp = await fetch('/api/trends/scan?force=true', { credentials: 'include' });
        const data = await resp.json() as TrendReport;
        currentReport = data;

        // åˆ·æ–°å½“å‰ Tab
