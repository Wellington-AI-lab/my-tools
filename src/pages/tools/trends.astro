    // ========== äº‹ä»¶ç»‘å®š ==========

    // Tab åˆ‡æ¢
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.getAttribute('data-tab') as 'hot' | 'velocity24h' | 'weekly' | 'persistent';
        if (tab) switchTab(tab);
