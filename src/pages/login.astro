---
import '@/styles/global.css';
import { safeRedirectPath } from '@/lib/redirect';

const redirect = safeRedirectPath(Astro.url.searchParams.get('redirect'));
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>登录 · My Tools</title>
  </head>
  <body>
    <div class="titan-login-page">
      <div class="titan-login-card">
        <h1 class="titan-login-heading">登录</h1>
        <p class="titan-login-subtitle">
          请输入站点密码。
        </p>

        <form id="loginForm" class="titan-login-form">
          <input type="hidden" name="redirect" value={redirect} />

          <div class="titan-login-field">
            <label class="titan-label" for="password">密码</label>
            <input
              id="password"
              name="password"
              type="password"
              class="titan-input"
              autocomplete="current-password"
              required
            />
          </div>

          <div id="errorBox" class="titan-error hidden"></div>

          <button type="submit" class="titan-btn titan-btn-primary">
            登录
          </button>
        </form>
      </div>
    </div>

    <style>
      /* Titan Login Page Styles */
      .titan-login-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 16px;
        background: #FAFAFA;
      }

      .titan-login-card {
        width: 100%;
        max-width: 400px;
        background: #FFFFFF;
        border: 1px solid #E5E7EB;
        border-radius: 24px;
        padding: 32px;
      }

      .titan-login-heading {
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: -0.02em;
        color: #1F2937;
      }

      .titan-login-subtitle {
        margin-top: 8px;
        margin-bottom: 24px;
        font-size: 0.875rem;
        color: #6B7280;
      }

      .titan-login-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .titan-login-field {
        display: flex;
        flex-direction: column;
      }

      .titan-error {
        padding: 12px;
        font-size: 0.875rem;
        color: #DC2626;
        background: #FEE2E2;
        border-radius: 8px;
      }

      .titan-error.hidden {
        display: none;
      }
    </style>

    <script>
      const form = document.getElementById('loginForm') as HTMLFormElement | null;
      const errorBox = document.getElementById('errorBox') as HTMLElement | null;
      const password = document.getElementById('password') as HTMLInputElement | null;

      function showError(msg: string) {
        if (!errorBox) return;
        errorBox.textContent = msg || '登录失败';
        errorBox.classList.remove('hidden');
      }

      if (form) {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if (errorBox) errorBox.classList.add('hidden');
          const redirectInput = form.querySelector('input[name="redirect"]') as HTMLInputElement | null;
          const redirect = redirectInput?.value || '/';
          const pwd = password?.value || '';

          try {
            const resp = await fetch('/api/auth/login', {
              method: 'POST',
              headers: { 'content-type': 'application/json' },
              body: JSON.stringify({ password: pwd }),
              credentials: 'include',
            });
            const data = await resp.json().catch(() => ({}));
            if (!resp.ok) {
              showError(data?.error || `HTTP ${resp.status}`);
              return;
            }
            window.location.href = redirect;
          } catch (err) {
            showError('网络错误');
          }
        });
      }
    </script>
  </body>
</html>
